#!/usr/bin/bash

SCRIPTDIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"

if [ ! -z $SECURE_FILES ]; then
    # have to use  us-east-1 - aws tool does not recognize anything else
    # for S3 download
    sudo docker run --rm \
        -v /home/core/:/data/ behance/docker-aws-s3-downloader \
         us-east-1 $CONTROL_TIER_S3SECURE_BUCKET $SECURE_FILES
fi

sudo cp ${SCRIPTDIR}/v2/units/control-jenkins.service \
  /etc/systemd/system/control-jenkins.service

/usr/bin/fleetctl submit ${SCRIPTDIR}/v2/fleet/submit-jenkins.service
/usr/bin/fleetctl start submit-jenkins.service
