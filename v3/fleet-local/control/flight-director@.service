[Unit]
Description=Flight Director @ %i
# it's implied that chronos & marathon require mesos
# look here: https://github.com/behance/mesos-systemd/tree/master/v3/fleet
After=docker.service chronos@%i.service marathon@%i.service
Requires=docker.service

[Service]
Environment="IMAGE=etcdctl get /images/flight-director"
User=core
Restart=on-failure
RestartSec=8
TimeoutStartSec=0

ExecStartPre=/usr/bin/sh -c "docker pull $($IMAGE)"
ExecStartPre=-/usr/bin/docker kill flight-director
ExecStartPre=-/usr/bin/docker rm flight-director
ExecStart=/usr/bin/sh -c "/usr/bin/docker run \
  --name flight-director \
  --net='host' \
  -e LOG_APP_NAME=flight-director \
  -e FD_API_SERVER_PORT=`etcdctl get /flight-director/api-server-port` \
  -e FD_CHRONOS_MASTER=`etcdctl get /flight-director/chronos-master` \
  -e FD_DB_DATABASE=`etcdctl get /flight-director/db-name` \
  -e FD_DB_ENGINE=`etcdctl get /flight-director/db-engine` \
  -e FD_DB_PASSWORD=`etcdctl get /environment/RDSPASSWORD` \
  -e FD_DB_PATH=`etcdctl get /flight-director/db-path` \
  -e FD_DB_USERNAME=`etcdctl get /flight-director/db-username` \
  -e FD_MARATHON_USER=`etcdctl get /marathon/username` \
  -e FD_MARATHON_PASSWORD=`etcdctl get /marathon/password` \
  -e FD_DEBUG=`etcdctl get /flight-director/debug` \
  -e FD_DOCKERCFG_LOCATION=`etcdctl get /flight-director/dockercfg-location` \
  -e FD_EVENT_INTERFACE=`etcdctl get /flight-director/event-interface` \
  -e FD_EVENT_PORT=`etcdctl get /flight-director/event-port` \
  -e FD_FIXTURES=`etcdctl get /flight-director/fixtures` \
  -e FD_KV_SERVER=`etcdctl get /flight-director/kv-server` \
  -e FD_LOG_LEVEL=`etcdctl get /flight-director/log-level` \
  -e FD_LOG_LOCATION=`etcdctl get /flight-director/log-location` \
  -e FD_LOG_MARATHON_API_CALLS=`etcdctl get /flight-director/log-marathon-api-calls` \
  -e FD_MARATHON_MASTER=`etcdctl get /flight-director/marathon-master` \
  -e FD_MESOS_MASTER=`etcdctl get /flight-director/mesos-master` \
  -e AUTHORIZER_TYPE=`etcdctl get /flight-director/authorizer-type` \
  -e FD_AIRLOCK_PUBLIC_KEY=\"`etcdctl get /flight-director/airlock-public-key`\" \
  -e FD_MARATHON_MASTER_PROTOCOL=`etcdctl get /flight-director/marathon-master-protocol` \
  -e FD_MESOS_MASTER_PROTOCOL=`etcdctl get /flight-director/mesos-master-protocol` \
  -e FD_ALLOW_MARATHON_UNVERIFIED_TLS=`etcdctl get /flight-director/allow-marathon-unverified-tls` \
  $($IMAGE)"

ExecStop=-/usr/bin/docker stop flight-director

[Install]
WantedBy=multi-user.target

[X-Fleet]
Global=false
MachineMetadata=role=control
MachineMetadata=ip=%i
